diff --git a/src/freedreno/vulkan/tu_cmd_buffer.cc b/src/freedreno/vulkan/tu_cmd_buffer.cc
--- a/src/freedreno/vulkan/tu_cmd_buffer.cc
+++ b/src/freedreno/vulkan/tu_cmd_buffer.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon Vertex Buffer Fix - Vertex buffer handling fixes */
 
 /* Vertex buffer binding and handling fixes */
 
@@ -300,6 +301,20 @@ tu_cmd_buffer_bind_vertex_buffers(struct tu_cmd_buffer *cmd)
    /* Vertex buffer binding fixes */
+   
+   /* Ensure proper buffer alignment */
+   for (uint32_t i = 0; i < binding_count; i++) {
+       struct tu_buffer *buffer = buffers[i];
+       if (buffer) {
+           /* Align offset to 4 bytes minimum */
+           uint64_t offset = ALIGN(offsets[i], 4);
+           
+           /* Validate buffer bounds */
+           if (offset >= buffer->size) {
+               offset = 0;
+           }
+           
+           cmd->state.vb[first_binding + i].offset = offset;
+       }
+   }
 
 diff --git a/src/freedreno/vulkan/tu_pipeline.cc b/src/freedreno/vulkan/tu_pipeline.cc
--- a/src/freedreno/vulkan/tu_pipeline.cc
+++ b/src/freedreno/vulkan/tu_pipeline.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon Vertex Buffer Fix - Pipeline vertex input fixes */
 
@@ -200,6 +201,16 @@ tu_pipeline_create_vertex_input(struct tu_pipeline *pipeline)
    /* Vertex input fixes */
+   
+   /* Handle zero stride vertex buffers */
+   for (uint32_t i = 0; i < vi_info->vertexBindingDescriptionCount; i++) {
+       const VkVertexInputBindingDescription *binding = &vi_info->pVertexBindingDescriptions[i];
+       
+       if (binding->stride == 0) {
+           /* Use instance rate for zero stride */
+           pipeline->vi.bindings[binding->binding].instanced = true;
+       }
+   }
 
 diff --git a/src/freedreno/vulkan/tu_draw.cc b/src/freedreno/vulkan/tu_draw.cc
