diff --git a/src/freedreno/vulkan/tu_device_memory.cc b/src/freedreno/vulkan/tu_device_memory.cc
--- a/src/freedreno/vulkan/tu_device_memory.cc
+++ b/src/freedreno/vulkan/tu_device_memory.cc
@@ -1,3 +1,4 @@
+/* Dragon: Common Memory Fix - Memory management improvements */
 
 /* Memory allocation and management fixes */
 
@@ -50,6 +51,15 @@ tu_device_memory_alloc(struct tu_device *dev, struct tu_device_memory *mem)
    /* Improved memory allocation strategy */
+   
+   /* Align allocations to page boundaries */
+   mem->alignment = MAX2(mem->alignment, 4096);
+   
+   /* Use appropriate memory type */
+   if (mem->flags & VK_MEMORY_PROPERTY_DEVICE_LOCAL_BIT) {
+       mem->heap = TU_MEMORY_HEAP_DEVICE;
+   }
+   
+   /* Prevent fragmentation */
+   mem->pool_alloc = true;
 
 diff --git a/src/freedreno/vulkan/tu_bo.cc b/src/freedreno/vulkan/tu_bo.cc
--- a/src/freedreno/vulkan/tu_bo.cc
+++ b/src/freedreno/vulkan/tu_bo.cc
@@ -1,3 +1,4 @@
+/* Dragon: Common Memory Fix - Buffer object improvements */
 
@@ -80,6 +81,12 @@ tu_bo_init(struct tu_device *dev, struct tu_bo *bo)
    /* Buffer object initialization fixes */
+   
+   /* Ensure proper GPU address alignment */
+   bo->iova = ALIGN(bo->iova, 4096);
+   
+   /* Set appropriate caching mode */
+   bo->cache_mode = TU_BO_CACHE_WC;
